
@model IEnumerable<StudentReadDto>
@{
    ViewBag.Title = $"Students Index";
}

<a asp-action="Create" asp-controller="Student" class="btn btn-info">Add</a>
<table class="table table-striped table-hover">
    <thead>
    <th scope="col">#</th>
    <th scope="col">ID</th>
    <th scope="col">Name</th>
    <th scope="col">Gender</th>
    <th scope="col">City</th>
    <th scope="col">Date Of Birth</th>
    <th scope="col">Is Enrolled</th>
    </thead>
    @{
        int i = 0;
    }
    <tbody>
        @if (Model?.Count() == 0)
        {
            <tr>
                <td colspan="4">No Data</td>
            </tr>
        }
        else
        {
            foreach (var st in Model)
            {
                <tr>
                    <th scope="row">
                        @(
                            i + 1
                         )
                    </th>
                    <td>@st.Id</td>
                    <td>@st.Name</td>
                    <td>@st.Gender</td>
                    <td>@st.City</td>
                    <td>@st.DateOfBirth</td>
                    <td>@st.IsEnrolled</td>
                    <td>
                        @*<a href="/Student/Details/@st.Id" class="btn btn-primary">Details</a>*@
                        <a asp-controller="Student" asp-action="Details" asp-route-id="@st.Id" class="btn btn-primary">Details</a>
                    </td>
                    <td>
                        @*<a href="/Student/Edit/@st.Id" class="btn btn-success">Edit</a>*@
                        <a asp-controller="Student" asp-action="Edit" asp-route-id="@st.Id" class="btn btn-success">Edit</a>
                    </td>
                    <td>
                        @*<a href="/Student/Delete/@st.Id" class="btn btn-danger">Delete</a>*@
                        <a asp-controller="Student" asp-action="Delete" asp-route-id="@st.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>

                i++;
            }
        }

    </tbody>
    <div class="pagination_section">
        <a asp-controller="Student" asp-action="Index" asp-route-pageSize="5" asp-route-pageNumber="1" >1</a>
        <a asp-controller="Student" asp-action="Index" asp-route-pageSize="5" asp-route-pageNumber="2" >2</a>
        <a asp-controller="Student" asp-action="Index" asp-route-pageSize="5" asp-route-pageNumber="3" >3</a>
        <a asp-controller="Student" asp-action="Index" asp-route-pageSize="5" asp-route-pageNumber="4" >4</a>
        <a asp-controller="Student" asp-action="Index" asp-route-pageSize="5" asp-route-pageNumber="5" >5</a>
        <a asp-controller="Student" asp-action="Index" asp-route-pageSize="5" asp-route-pageNumber="6" >6</a>
        <a asp-controller="Student" asp-action="Index" asp-route-pageSize="5" asp-route-pageNumber="7"  >7</a>
        <a asp-controller="Student" asp-action="Index" asp-route-pageSize="5" asp-route-pageNumber="8" >8</a>
        <a asp-controller="Student" asp-action="Index" asp-route-pageSize="5" asp-route-pageNumber="9" >9</a>
        <a asp-controller="Student" asp-action="Index" asp-route-pageSize="5" asp-route-pageNumber="10" >10</a>
    </div>
</table>
<style>

    .pagination_section {
        position: relative;
    }

    .pagination_section a {
        color: black;
        padding: 10px 18px;
        text-decoration: none;
    }

    .pagination_section a:hover:not(.active) {
        background-color: #031F3B;
        color: white;
    }



    a{
        font-weight: bold;
    }

    .content {
        margin: 50px;
        padding: 15px;
        width: 700px;
        height: 200px;
        border: 2px solid black;
    }
</style>

